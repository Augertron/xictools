#######################################################################
# xic/sparse/Makefile.in
#######################################################################
# $Id: Makefile.in,v 5.50 2011/08/23 04:37:10 stevew Exp $
#######################################################################

GFX_VERSION = @GFX_VERSION@
DATE = @DATE@

CXX = @CXX@ -DXIC
CC = @CC@
CFLAGS = @CFLAGSG@ @NEEDINT64@ @UFLAGS@
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@ @NEEDINT64@
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@

LIB_TARGET = sparse.a

LPATH = ../../../xt_base
HFILES = spconfig.h spmacros.h
CCFILES = spbuild.cc spfactor.cc spsolve.cc sputils.cc
CCOBJS = $(CCFILES:.cc=.o)
INCLUDE = -I../../include -I$(LPATH)/miscutil

$(LIB_TARGET): include $(HFILES) $(CCOBJS)
	@if [ -f $(LIB_TARGET) ]; then \
	    rm -f $(LIB_TARGET); \
	fi
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) $(CFLAGS) $(INCLUDE) -c $*.cc

$(HFILES) $(CCFILES):
	cp -fp $(LPATH)/sparse/$@ .

spconfig.h:     $(LPATH)/sparse/spconfig.h
spmacros.h:     $(LPATH)/sparse/spmacros.h
spbuild.cc:     $(LPATH)/sparse/spbuild.cc
spfactor.cc:    $(LPATH)/sparse/spfactor.cc
spsolve.cc:     $(LPATH)/sparse/spsolve.cc
sputils.cc:     $(LPATH)/sparse/sputils.cc

include:
	cd ../../include; $(MAKE)

depend: $(HFILES) $(CCFILES)
	@echo depending in xic/sparse
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

clean:
	-rm *.o $(LIB_TARGET) $(HFILES) $(CCFILES)

distclean:
	-rm *.o $(LIB_TARGET) $(HFILES) $(CCFILES) Makefile

#######################################################################
