#######################################################################
LOCATION = wrspice/src/misc
#######################################################################

SPICE_VERSION = @SPICE_VERSION@
DATE = @DATE@

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGSG@ @UFLAGS@ -DWRSPICE
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@ -DWRSPICE
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@

LIB_TARGET = misc.a

BASE = ../../../xt_base
VLOG = ../../../vl
MOZY = ../../../mozy
INCLUDE = -I../../include -I$(BASE)/include -I$(VLOG) -I$(MOZY)/include

NFILES = hash.cc spnumber.cc spparse.cc
HFILES =
CCFILES = \
  $(NFILES) texthelp.cc time.cc ttyio.cc vardb.cc verilog.cc wlist.cc
CCOBJS = $(CCFILES:.cc=.o)

$(LIB_TARGET): $(CCOBJS)
	@if [ -f $(LIB_TARGET) ]; then \
	    rm -f $(LIB_TARGET); \
	fi
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) $(CFLAGS) $(INCLUDE) -c $*.cc

$(NFILES):
	cp -fp $(BASE)/spnumber/$@ .

hash.cc:        $(BASE)/spnumber/hash.cc
spnumber.cc:    $(BASE)/spnumber/spnumber.cc
spparse.cc:     $(BASE)/spnumber/spparse.cc

depend: $(NFILES)
	@echo depending in $(LOCATION)
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

clean:
	-rm *.o $(LIB_TARGET) $(NFILES)

distclean: clean
	-rm Makefile

#######################################################################
