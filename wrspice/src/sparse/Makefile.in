SPICE_VERSION = @SPICE_VERSION@
DATE = @DATE@

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGS_SG@ @UFLAGS@ -DWRSPICE -DUSE_KLU
DEPEND_PROG = @DEPEND_PROG@ @CFLAGS_SG@ -DWRSPICE -DUSE_KLU
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@

LIB_TARGET = sparse.a

LPATH = ../../../xt_base
KPATH = ../../../KLU
SP_HFILES = spconfig.h spmacros.h
SP_CCFILES = spbuild.cc spfactor.cc spoutput.cc spsolve.cc sputils.cc
CCFILES = kluif.cc spspice.cc $(SP_CCFILES)
CCOBJS = $(CCFILES:.cc=.o)
INCLUDE = -I../../include -I$(LPATH)/ginterf -I$(LPATH)/miscutil \
-I$(KPATH)/AMD/Include -I$(KPATH)/BTF/Include -I$(KPATH)/COLAMD/Include \
-I$(KPATH)/KLU/Include -I$(KPATH)/SuiteSparse_config

$(LIB_TARGET): include $(SP_HFILES) $(CCOBJS)
	@if [ -f $(LIB_TARGET) ]; then \
	    rm -f $(LIB_TARGET); \
	fi
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) $(CFLAGS) $(INCLUDE) -c $*.cc

$(SP_HFILES) $(SP_CCFILES):
	cp -fp $(LPATH)/sparse/$@ .

spconfig.h:     $(LPATH)/sparse/spconfig.h
spmacros.h:     $(LPATH)/sparse/spmacros.h
spbuild.cc:     $(LPATH)/sparse/spbuild.cc
spfactor.cc:    $(LPATH)/sparse/spfactor.cc
spoutput.cc:    $(LPATH)/sparse/spoutput.cc
spsolve.cc:     $(LPATH)/sparse/spsolve.cc
sputils.cc:     $(LPATH)/sparse/sputils.cc

include:
	cd ../../include; $(MAKE)

depend: $(SP_HFILES) $(CCFILES)
	@echo depending in wrspice/sparse
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

clean:
	-rm *.o $(LIB_TARGET) $(SP_HFILES) $(SP_CCFILES)

distclean:
	-rm *.o $(LIB_TARGET) $(SP_HFILES) $(SP_CCFILES) Makefile

#######################################################################
