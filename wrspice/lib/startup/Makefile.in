# lib/wrspice/startup/Makefile
# $Id: Makefile,v 1.6 2015/09/16 00:13:22 stevew Exp $

SOEXT = @SOEXT@

BASE = ../../../xt_base
KPATH = ../../../KLU

all: wr_install klu

wr_install: $(BASE)/packages/util/wr_install
	cp -f $(BASE)/packages/util/wr_install .

klu::
	if [ -f $(KPATH)/klu_wr.$(SOEXT) ]; then \
	    $(MAKE) klu_wr.$(SOEXT); \
	fi

klu_wr.$(SOEXT): $(KPATH)/klu_wr.$(SOEXT)
	cp -f $(KPATH)/klu_wr.$(SOEXT) .

clean:
	-@rm -f wr_install klu_wr.$(SOEXT)

distclean:
	-@rm -f wr_install klu_wr.$(SOEXT) Makefile

