SOEXT = @SOEXT@

FILES = wr_install
LPATH = ../../../xt_base
KPATH = ../../../KLU

dummy: $(FILES) foo

$(FILES):
	cp -f $(LPATH)/packages/util/$@ .

wr_install:     $(LPATH)/packages/util/wr_install

foo::
	if [ -f $(KPATH)/klu_wr.$(SOEXT) ]; then \
	    $(MAKE) klu_wr.$(SOEXT); \
	fi

klu_wr.$(SOEXT): $(KPATH)/klu_wr.$(SOEXT)
	cp -f $(KPATH)/klu_wr.$(SOEXT) .

clean:
	rm -f $(FILES) klu_wr.$(SOEXT)

distclean:
	rm -f $(FILES) klu_wr.$(SOEXT) Makefile

