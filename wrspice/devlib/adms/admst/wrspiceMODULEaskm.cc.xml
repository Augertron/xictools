<!DOCTYPE admst SYSTEM "admst.dtd">
<admst version="2.3.0" xmlns:admst="http://mot-adms.sourceforge.net/xml-files/admst">

<!-- ---------------------------------------------------------------------- -->
<admst:template match="module_askm_cc">

  <admst:text format="\n#include &quot;$(modlc)defs.h&quot;\n"/>

  <admst:text format="\n\nint\n"/>
  <admst:text format="$(moduc)dev::askModl(const sGENmodel *genmod, int which, IFdata *data)\n"/>
  <admst:text format="{\n"/>
  <admst:text format="$(indent)const s$(moduc)model *model = (const s$(moduc)model*)genmod;\n"/>

  <admst:text format="\n$(indent)switch (which) {\n"/>
  <!--
    When using "unified" mode, the model struct contains the same
    parameters as the instances.
  -->
  <admst:if test="[$unified='yes']">
    <!--
      Don't include the non-parameters with attributes here, these
      do not have a model field.
    -->
    <admst:for-each select="variable[parametertype='instance' and
        input='yes']">
      <admst:text format="$(indent)case $(moduc)_%(name):\n"/>
      <admst:apply-templates select="." match="push_indent"/>
      <admst:choose>
        <admst:when test="[type='real']">
          <admst:text format="$(indent)data->v.rValue = model->%(name);\n"/>
          <admst:text format="$(indent)data->type = IF_REAL;\n"/>
        </admst:when>
        <admst:when test="[type='integer']">
          <admst:text format="$(indent)data->v.iValue = model->%(name);\n"/>
          <admst:text format="$(indent)data->type = IF_INTEGER;\n"/>
        </admst:when>
        <admst:when test="[type='string']">
          <admst:text format="$(indent)data->v.sValue = model->%(name);\n"/>
          <admst:text format="$(indent)data->type = IF_STRING;\n"/>
        </admst:when>
        <admst:otherwise>
          <admst:fatal
            format="module_askm_cc: unsupported parameter type.\n"/>
        </admst:otherwise>
      </admst:choose>
      <admst:text format="$(indent)break;\n"/>
      <admst:apply-templates select="." match="pop_indent"/>
    </admst:for-each>
  </admst:if>
  <!--
    In unified mode, the loop below will be empty except for ouptut
    variables that were explicitly given a type="model" attribute.
  -->
  <admst:for-each select="variable[parametertype='model' and
      (input='yes' or not(nilled(attribute)))]">
    <admst:text format="$(indent)case $(moduc)_MOD_%(name):\n"/>
    <admst:apply-templates select="." match="push_indent"/>
    <admst:choose>
      <admst:when test="[type='real']">
        <admst:text format="$(indent)data->v.rValue = model->%(name);\n"/>
        <admst:text format="$(indent)data->type = IF_REAL;\n"/>
      </admst:when>
      <admst:when test="[type='integer']">
        <admst:text format="$(indent)data->v.iValue = model->%(name);\n"/>
        <admst:text format="$(indent)data->type = IF_INTEGER;\n"/>
      </admst:when>
      <admst:when test="[type='string']">
        <admst:text format="$(indent)data->v.sValue = model->%(name);\n"/>
        <admst:text format="$(indent)data->type = IF_STRING;\n"/>
      </admst:when>
      <admst:otherwise>
        <admst:fatal
          format="module_askm_cc: unsupported parameter type.\n"/>
      </admst:otherwise>
    </admst:choose>
    <admst:text format="$(indent)break;\n"/>
    <admst:apply-templates select="." match="pop_indent"/>
  </admst:for-each>
  <admst:text format="$(indent)default:\n"/>
  <admst:apply-templates select="." match="push_indent"/>
  <admst:text format="$(indent)return (E_BADPARM);\n"/>
  <admst:apply-templates select="." match="pop_indent"/>
  <admst:text format="$(indent)}\n"/>
  <admst:text format="$(indent)return (OK);\n"/>

  <admst:text format="}\n\n"/>
</admst:template>

<!-- ---------------------------------------------------------------------- -->
<!-- ---------------------------------------------------------------------- -->

<admst:for-each select="/module">
  <admst:apply-templates select="." match="init:translation"/>
  <admst:open file="$(modlc)askm.cc">
    <admst:value-of select="/simulator/package_string"/>
    <admst:text format="// Interface: %s\n"/>
    <admst:value-of select="/simulator/currentdate"/>
    <admst:value-of select="/simulator/fullname"/>
    <admst:text format="// Created by: %s - %s\n"/>
    <admst:apply-templates select="." match="push_indent"/>
    <admst:apply-templates select="." match="module_askm_cc"/>
    <admst:apply-templates select="." match="pop_indent"/>
  </admst:open>
  <admst:message format="$(modlc)askm.cc: file created\n"/>
</admst:for-each>

</admst>

