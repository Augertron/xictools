%pre
if [ -z "$RPM_INSTALL_PREFIX" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi
# Nothing to do.


%post
if [ -z "$RPM_INSTALL_PREFIX" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi
# Nothing to do.

%postun
if [ -z "$RPM_INSTALL_PREFIX" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi
# Make sure that this is entirely gone.
rm -rf $(prefix)/xictools/wrspice.current

