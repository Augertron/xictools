#######################################################################
LOCATION = mozy/src/help
#######################################################################

DATE = @DATE@

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGSG@ @UFLAGS@
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@
OSNAME = @OSNAME@
ARCH = @ARCH@

BASE = ../../../xt_base
INCLUDE = -I../../include -I../../include/help -I$(BASE)/include

LIB_TARGET = ../../lib/help.a

HFILES = \
    help_cache.h \
    help_context.h \
    help_defs.h \
    help_startup.h \
    help_topic.h

CCFILES = \
    help_cache.cc \
    help_context.cc \
    help_images.cc \
    help_pkgs.cc \
    help_read.cc \
    help_startup.cc \
    help_topic.cc

CCOBJS = $(CCFILES:.cc=.o)

$(LIB_TARGET): $(CCOBJS)
	-@rm -f $(LIB_TARGET);
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) -c $(CFLAGS) -DOSNAME=\"$(OSNAME)\" -DARCH=\"$(ARCH)\" \
 $(INCLUDE) -o $@ $<

clean:
	-@rm -f $(CCOBJS) $(LIB_TARGET)

distclean: clean
	-@rm -f Makefile

depend:
	@echo depending in $(LOCATION)
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

install::

uninstall::

#######################################################################
