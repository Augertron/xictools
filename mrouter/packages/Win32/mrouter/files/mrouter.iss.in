
[Setup]

AppName=mrouter
AppVerName=mrouter-VERSION
AppVersion=VERSION
AppPublisher=Whiteley Research Inc.
AppPublisherURL=http://wrcad.com

OutputBaseFilename=mrouter-Win32-VERSION-i386

Compression=bzip

DefaultDirName=c:\usr\local
DefaultGroupName=XicTools
