%pre
if [ x"$RPM_INSTALL_PREFIX" = "x" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi

# nothing to do


%post
if [ x"$RPM_INSTALL_PREFIX" = "x" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi

# nothing to do


%preun
if [ x"$RPM_INSTALL_PREFIX" = "x" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi

# nothing to do


%postun
if [ x"$RPM_INSTALL_PREFIX" = "x" ]; then
    prefix=/usr/local
else
    prefix=$RPM_INSTALL_PREFIX
fi

# nothing to do

