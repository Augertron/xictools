#! /bin/sh

# This is a mozy method=post handler for the fetch form

progs=
oses=

while [ 1 = 1 ]; do
    read inp
    if [ $? != 0 ]; then
        break
    fi
    tifs="$IFS"
    IFS="="
    set $inp
    IFS="$tifs"
    case $1 in
    adms | fastcap | fasthenry | mozy | mrouter | vl | wrspice | xic | xtlserv)
        if [ x"$progs" = x ]; then
            progs=$1
        else
            progs="$progs $1"
        fi
        ;;
    Darwin* | Linux* | Win*)
        if [ x"$oses" = x ]; then
            oses=$1
        else
            oses="$oses $1"
        fi
    esac
done

if [ x"$progs" = x ]; then
    echo NO PROGHAMS SELECTED!
    exit 1
fi
if [ x"$oses" = x ]; then
    echo NO DISTRIBUTIONS SELECTED!
    exit 1
fi

util/fetchdist "$progs" "$oses"
echo TRANSFER COMPLETED
